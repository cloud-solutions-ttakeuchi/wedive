rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check auth
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated(); // Or public? For profiles.
      allow write: if isOwner(userId);

      // Logs Subcollection (Specific path access)
      // This is primarily for "List Collection" operations where you list documents in a specific parent.
      match /logs/{logId} {
        allow read: if resource.data.isPrivate == false || (request.auth != null && request.auth.uid == userId);
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // AI Concierge Tickets Subcollection
      // Reviews Collection
      match /aiConciergeTickets/{aiConciergeTicketsId} {
        allow read, create, update, delete: if isOwner(userId);
      }
    }

    // Collection Group Rule (Global Logs access)
    // This is required for collectionGroup('logs') queries to work reliably across all locations (including potential root logs).
    match /{path=**}/logs/{logId} {
      allow read: if resource.data.isPrivate == false || (request.auth != null && request.auth.uid == resource.data.userId);
    }

    // Global Creatures/Points (Read Public, Write Admin/Auth)
    match /creatures/{creatureId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Refine for moderation later
    }

    match /points/{pointId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Refine later
    }

    match /point_creatures/{relId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Zones and Areas (Master Data)
    match /zones/{zoneId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /areas/{areaId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /regions/{regionId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Proposals
    match /creature_proposals/{propId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    match /point_proposals/{propId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Reviews Collection
    match /reviews/{reviewId} {
      // Allowed to read if it's approved or if it's your own
      allow read: if true;
      // allow read: if resource.data.status == 'approved' || !('status' in resource.data) || isOwner(resource.data.userId);

      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId) || (isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'moderator']);
    }

    // Catch-all (Default deny)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
