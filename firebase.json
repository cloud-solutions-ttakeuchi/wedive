{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/concierge",
        "function": "getConciergeResponse",
        "region": "asia-northeast1"
      },
      {
        "source": "/api/spot-draft",
        "function": "generateSpotDraft",
        "region": "asia-northeast1"
      },
      {
        "source": "/api/creature-draft",
        "function": "generateCreatureDraft",
        "region": "asia-northeast1"
      },
      {
        "source": "/api/runDataCleansing",
        "function": "runDataCleansing",
        "region": "asia-northeast1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp|svg|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}
